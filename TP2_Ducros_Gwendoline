  CREATE PROCEDURE maprocedure(
  	@datedeb date,
  	@datefin date,
  	@total bit
  )
  AS BEGIN

  SELECT CDE.date_cde AS date,
		CDE.id_adrliv,
		CL.id_client,
		MIN(CDE.num_bl) AS num_bl,
		COUNT(CO.id_colis) AS nb_colis,
		CO.poids,
		CDE.id_transport
	INTO #TMP
	FROM CLIENT CL
	INNER JOIN COMMANDE CDE
		ON CL.id_client = CDE.id_client
	LEFT JOIN COLIS CO
		ON CDE.id_commande = CO.id_commande
	GROUP BY CDE.date_cde,
		CDE.id_adrliv,
		CL.id_client,
		CO.poids,
		CDE.id_transport;

	INSERT INTO #TMP (
    date,
		id_adrliv,
		id_client,
		num_bl,
		nb_colis,
		poids,
		id_transport)
	SELECT SUM(nbcolis),
    SUM(Poidstotal),
    '',
    '',
    '',
    '',
    ''
  FROM #TMP
  WHERE date '' AND date ''

  SELECT * FROM #TMP;

END;
